@model AstreleTwitter.com.Models.Post

@{
    ViewData["Title"] = "Detalii Postare";
    bool isAdmin = ViewBag.IsAdmin;
    bool isOwner = ViewBag.CurrentUserId != null && Model.UserId == ViewBag.CurrentUserId;
    bool hasRights = isAdmin || isOwner;
    bool isLiked = ViewBag.CurrentUserId != null && Model.Likes.Any(l => l.UserId == (string)ViewBag.CurrentUserId);
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        <i class="fa-solid fa-triangle-exclamation"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <a asp-controller="Profiles" asp-action="Show" asp-route-id="@Model.UserId" class="btn btn-outline-light mb-3">
                <i class="fa-solid fa-arrow-left"></i> Înapoi la Profil
            </a>

            <div class="card shadow-lg border-0 post-card">

                <div class="card-header d-flex justify-content-between align-items-center border-bottom-0">
                    <div class="d-flex align-items-center gap-2">
                        @if (!string.IsNullOrEmpty(Model.User?.ProfilePicture))
                        {
                            <img src="@Model.User.ProfilePicture" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                <i class="fa-solid fa-user text-white"></i>
                            </div>
                        }
                        <div>
                            <strong class="fs-5">@Model.User?.FirstName @Model.User?.LastName</strong>
                            <br />
                            <small class="text-muted">@Model.Date.ToString("f")</small>
                        </div>
                    </div>

                    @if (hasRights)
                    {
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-info me-1">
                                <i class="fa-solid fa-pen"></i> Edit
                            </a>
                            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Ștergi postarea definitiv?');">
                                    <i class="fa-solid fa-trash"></i> Șterge
                                </button>
                            </form>
                        </div>
                    }
                </div>

                <div class="card-body">
                    <p class="card-text fs-4">@Model.Content</p>

                    @if (!string.IsNullOrEmpty(Model.MediaPath))
                    {
                        <div class="mt-3 text-center position-relative">
                            <img src="@Model.MediaPath" class="img-fluid rounded shadow" style="max-height: 600px;" />
                            @if (hasRights)
                            {
                                <form asp-action="DeleteMedia" asp-route-id="@Model.Id" method="post" class="position-absolute" style="top: 10px; right: 10px;">
                                    <button type="submit" class="btn btn-danger btn-sm shadow" onclick="return confirm('Ștergi doar poza?');">
                                        <i class="fa-solid fa-image"></i> <i class="fa-solid fa-xmark"></i>
                                    </button>
                                </form>
                            }
                        </div>
                    }
                </div>

                <div class="card-footer border-top-0">

                    <div class="d-flex align-items-center mb-4 border-bottom pb-3" style="border-color: rgba(128,128,128,0.3) !important;">
                        <form asp-controller="Posts" asp-action="ToggleLike" method="post" class="me-2">
                            <input type="hidden" name="postId" value="@Model.Id" />
                            <input type="hidden" name="returnUrl" value="@Context.Request.Path" />

                            <button type="submit" class="btn btn-sm border-0 p-0" style="background: none;">
                                @if (isLiked)
                                {
                                    <i class="fa-solid fa-heart text-heart fa-lg"></i>
                                }
                                else
                                {
                                    <i class="fa-regular fa-heart text-heart fa-lg"></i>
                                }
                            </button>
                        </form>

                        <div style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#likesModal-@Model.Id">
                            <span class="like-count-text ms-1 fs-5">@Model.Likes.Count</span>
                            <span class="like-label fs-6">aprecieri</span>
                        </div>
                    </div>

                    <div class="mb-3 d-flex align-items-center gap-2">
                        <i class="fa-regular fa-comments fa-lg"></i>
                        <h5 class="m-0 fw-bold">Comentarii (@(Model.Comments?.Count ?? 0))</h5>
                    </div>

                    @if (Model.Comments != null && Model.Comments.Any())
                    {
                        <ul class="list-unstyled">
                            @foreach (var comm in Model.Comments.OrderByDescending(c => c.Date))
                            {
                                bool isCommOwner = ViewBag.CurrentUserId != null && comm.UserId == (string)ViewBag.CurrentUserId;

                                <li class="mb-2 p-3 border-bottom d-flex justify-content-between align-items-start">
                                    <div>
                                        <a asp-controller="Profiles" asp-action="Show" asp-route-id="@comm.UserId" class="text-decoration-none fw-bold text-info">
                                            @comm.User?.FirstName:
                                        </a>
                                        <span class="ms-1">@comm.Content</span>
                                        <br />
                                        <small class="text-muted" style="font-size: 0.75rem">@comm.Date.ToString("g")</small>
                                    </div>

                                    @if (isAdmin || isCommOwner)
                                    {
                                        <div class="d-flex gap-2 ms-2">
                                            <a asp-action="EditComment" asp-route-id="@comm.Id" class="text-warning small"><i class="fa-solid fa-pen"></i></a>
                                            <form asp-action="DeleteComment" asp-route-id="@comm.Id" method="post">
                                                <button type="submit" class="btn btn-link p-0 text-danger small"><i class="fa-solid fa-trash"></i></button>
                                            </form>
                                        </div>
                                    }
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">Fii primul care comentează!</p>
                    }

                    @if (User.Identity.IsAuthenticated)
                    {
                        <form asp-action="AddComment" method="post" class="mt-4">
                            <input type="hidden" name="postId" value="@Model.Id" />
                            <div class="input-group">
                                <input type="text" name="content" class="form-control" placeholder="Scrie un comentariu..." />
                                <button type="submit" class="btn btn-primary">Trimite</button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="likesModal-@Model.Id" tabindex="-1" aria-labelledby="likesModalLabel-@Model.Id" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-sm">
        <div class="modal-content" style="background-color: var(--card-bg); color: var(--text-color); border: 1px solid var(--border-color);">

            <div class="modal-header" style="border-bottom: 1px solid var(--border-color);">
                <h6 class="modal-title fw-bold" id="likesModalLabel-@Model.Id">Aprecieri</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                @if (Model.Likes != null && Model.Likes.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var like in Model.Likes)
                        {
                            <li class="list-group-item d-flex align-items-center gap-2 border-0" style="background: transparent;">
                                <a asp-controller="Profiles" asp-action="Show" asp-route-id="@like.UserId" class="d-flex align-items-center text-decoration-none gap-2" style="width: 100%;">

                                    @if (!string.IsNullOrEmpty(like.User.ProfilePicture))
                                    {
                                        <img src="@like.User.ProfilePicture" class="rounded-circle" style="width: 30px; height: 30px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;">
                                            <i class="fa-solid fa-user text-white" style="font-size: 0.8rem;"></i>
                                        </div>
                                    }C
                                    <span style="color: var(--text-color); font-weight: bold;">@like.User.FirstName @like.User.LastName</span>
                                </a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="text-center py-3">
                        <p class="text-muted small mb-0">Fii primul care apreciază!</p>
                    </div>
                }
            </div>

            <div class="modal-footer p-1 border-top-0">
                <button type="button" class="btn btn-sm btn-secondary w-100" data-bs-dismiss="modal">Închide</button>
            </div>

        </div>
    </div>
</div>