@model AstreleTwitter.com.Models.Comment
@{
    ViewData["Title"] = "Editează Comentariul";
}

<div class="container mt-5" style="max-width: 600px;">
    <h2>Editează Comentariul</h2>
    <form asp-action="EditComment" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group mb-3">
            <label class="form-label">Comentariul tău:</label>
            <input type="text" name="content" class="form-control" value="@Model.Content" />
        </div>
        <button type="submit" class="btn btn-success">Salvează</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Anulează</a>
    </form>
</div>