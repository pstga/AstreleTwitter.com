@using Microsoft.AspNetCore.Identity
@using AstreleTwitter.com.Models
@model List<Post>

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Feed";
    var currentUser = SignInManager.IsSignedIn(User) ? await UserManager.GetUserAsync(User) : null;
    var isAdmin = User.IsInRole("Admin");
}

<div class="container mt-4" style="max-width: 700px;">

    @if (SignInManager.IsSignedIn(User))
    {
        <div class="card mb-4 shadow-sm border-0">
            <div class="card-body">
                <form asp-controller="Posts" asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="form-group mb-3">
                        <label class="fw-bold text-primary mb-2">Salut, @currentUser?.FirstName!</label>
                        <textarea name="content" class="form-control border-0 shadow-sm mb-2" rows="3" placeholder="Scrie ceva..." required></textarea>

                        <label class="small text-muted">Adaugă Poză sau Video:</label>
                        <input type="file" name="mediaFile" class="form-control form-control-sm" accept="image/*,video/*" />
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary px-4 rounded-pill">Publică</button>
                    </div>
                </form>
            </div>
        </div>
    }

    @foreach (var post in Model)
    {
        <div class="card mb-4 shadow-sm border-0">
            <div class="card-header border-0 d-flex justify-content-between align-items-center pt-3">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-dark text-white d-flex justify-content-center align-items-center me-2" style="width: 40px; height: 40px; font-weight: bold;">
                        @(post.User?.FirstName?.Substring(0, 1) ?? "?")
                    </div>
                    <div>
                        <span class="fw-bold text-dark">@post.User?.FirstName @post.User?.LastName</span>
                        <br />
                        <small class="text-muted" style="font-size: 0.8rem;">@post.Date.ToString("dd MMM HH:mm")</small>
                    </div>
                </div>

                @if (currentUser != null && (isAdmin || post.UserId == currentUser.Id))
                {
                    <div class="d-flex gap-2">
                        <a asp-controller="Posts" asp-action="Edit" asp-route-id="@post.Id" class="btn btn-sm btn-outline-warning">✎</a>

                        <form asp-controller="Posts" asp-action="Delete" asp-route-id="@post.Id" method="post" onsubmit="return confirm('Ștergi postarea?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger">🗑</button>
                        </form>
                    </div>
                }
            </div>

            <div class="card-body">
                <p class="card-text fs-5">@post.Content</p>

                @if (!string.IsNullOrEmpty(post.MediaPath))
                {
                    <div class="mt-3 text-center">
                        @if (post.MediaPath.EndsWith(".mp4") || post.MediaPath.EndsWith(".webm"))
                        {
                            <video controls class="img-fluid rounded" style="max-height: 400px;">
                                <source src="@post.MediaPath" type="video/mp4">
                                Browserul tău nu suportă video.
                            </video>
                        }
                        else
                        {
                            <img src="@post.MediaPath" class="img-fluid rounded" style="max-height: 400px;" alt="Post image" />
                        }
                    </div>
                }
            </div>

            <div class="card-footer border-0">
                @if (post.Comments != null && post.Comments.Any())
                {
                    <div class="mb-3">
                        @foreach (var comm in post.Comments)
                        {
                            <div class="d-flex justify-content-between align-items-start mb-2 border-bottom pb-1">
                                <div>
                                    <strong class="text-dark small">@comm.User?.FirstName:</strong>
                                    <span class="text-muted small">@comm.Content</span>
                                </div>

                                @if (currentUser != null && (isAdmin || comm.UserId == currentUser.Id))
                                {
                                    <a asp-controller="Posts" asp-action="EditComment" asp-route-id="@comm.Id"
                                       class="text-secondary small ms-2" style="text-decoration:none;">(editează)</a>
                                }
                            </div>
                        }
                    </div>
                }

                @if (SignInManager.IsSignedIn(User))
                {
                    <form asp-controller="Posts" asp-action="AddComment" method="post" class="d-flex mt-2">
                        <input type="hidden" name="postId" value="@post.Id" />
                        <input type="text" name="content" class="form-control form-control-sm rounded-pill me-2" placeholder="Comentează..." required />
                        <button type="submit" class="btn btn-sm btn-outline-secondary rounded-pill">Trimite</button>
                    </form>
                }
            </div>
        </div>
    }
</div>