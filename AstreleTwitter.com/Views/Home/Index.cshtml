@model IEnumerable<AstreleTwitter.com.Models.Post>

@{
    ViewData["Title"] = "Fluxul Galactic";

    var currentUser = ViewBag.CurrentUser as AstreleTwitter.com.Models.ApplicationUser;
    var myFollowingIds = ViewBag.MyFollowingIds as List<string> ?? new List<string>();

    bool esteLogat = User.Identity != null && User.Identity.IsAuthenticated;
    bool isAdmin = esteLogat && User.IsInRole("Admin");
    string activeFeed = ViewBag.FeedType as string ?? "global";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        <i class="fa-solid fa-triangle-exclamation"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row justify-content-center">
    <div class="col-md-8">

        @if (esteLogat)
        {
            <div class="d-flex justify-content-center mb-4">
                <div class="btn-group shadow-sm" role="group">
                    <a asp-action="Index" asp-route-feedType="global"
                       class="btn @(activeFeed == "global" ? "btn-primary" : "btn-outline-primary") px-4">
                        <i class="fa-solid fa-globe me-2"></i> Ultimele Transmisii
                    </a>
                    <a asp-action="Index" asp-route-feedType="following"
                       class="btn @(activeFeed == "following" ? "btn-primary" : "btn-outline-primary") px-4">
                        <i class="fa-solid fa-user-group me-2"></i> Feed Personalizat
                    </a>
                </div>
            </div>

            <div class="card mb-5 shadow-lg border-0">
                <div class="card-body p-4">
                    <form asp-controller="Posts" asp-action="Create" method="post" enctype="multipart/form-data" onsubmit="this.querySelector('button').disabled = true;">
                        <div class="mb-3">
                            <label class="form-label h5">
                                Ce transmiți, @(currentUser?.FirstName ?? "exploratorule")?
                            </label>
                            <textarea name="content" class="form-control" rows="3" placeholder="Scrie un mesaj..." ></textarea>
                        </div>
                        <div class="mb-3">
                            <input type="file" name="mediaFile" class="form-control form-control-sm" accept="image/*,video/*" />
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">Lansează Postarea 🚀</button>
                        </div>
                    </form>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-dark text-center shadow-lg border-0 mb-5">
                <h4>Bine ai venit în Astrele Twitter! 🪐</h4>
                <p>Trebuie să te <a asp-area="Identity" asp-page="/Account/Login">autentifici</a> pentru a posta.</p>
                <div class="mt-3">
                    <a asp-controller="Profiles" asp-action="Index" class="btn btn-outline-info">
                        <i class="fa-solid fa-search"></i> Caută Profiluri
                    </a>
                </div>
            </div>
        }

        <h3 class="mb-4 border-bottom pb-2">
            @(activeFeed == "following" ? "📡 Feed-ul Prietenilor Tăi" : "🚀 Toate Transmisiile")
        </h3>

        @if (Model != null && Model.Any())
        {
            foreach (var item in Model.OrderByDescending(p => p.Date))
            {
                bool isOwner = esteLogat && item.User != null && User.Identity.Name == item.User.UserName;
                bool hasRights = isOwner || isAdmin;
                bool isFollowingAuthor = item.User != null && myFollowingIds.Contains(item.UserId);
                bool isMe = esteLogat && currentUser != null && item.UserId == currentUser.Id;
                bool isLiked = currentUser != null && item.Likes.Any(l => l.UserId == currentUser.Id);

                <div class="card mb-4 shadow-sm post-card">
                    <div class="card-header d-flex justify-content-between align-items-center bg-transparent border-bottom-0">
                        <div class="d-flex align-items-center gap-2">
                            <a asp-controller="Profiles" asp-action="Show" asp-route-id="@item.UserId" class="text-decoration-none d-flex align-items-center gap-2">
                                @if (!string.IsNullOrEmpty(item.User?.ProfilePicture))
                                {
                                    <img src="@item.User.ProfilePicture" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                        <i class="fa-solid fa-user text-white"></i>
                                    </div>
                                }

                                <div>
                                    <strong>@(item.User?.FirstName ?? "Necunoscut") @(item.User?.LastName ?? "")</strong>
                                    <br />
                                    <small class="text-muted" style="font-size: 0.8rem;">@item.Date.ToString("g")</small>
                                </div>
                            </a>

                            @if (esteLogat && !isMe && item.User != null)
                            {
                                <form asp-controller="Follows" asp-action="ToggleFollow" method="post" class="ms-2">
                                    <input type="hidden" name="userId" value="@item.UserId" />
                                    @if (isFollowingAuthor)
                                    {
                                        <button type="submit" class="btn btn-sm btn-outline-danger py-0 px-2 fw-bold" title="Nu mai urmări">
                                            <i class="fa-solid fa-user-minus"></i> Unfollow
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-sm btn-success py-0 px-2 fw-bold" title="Urmărește">
                                            <i class="fa-solid fa-user-plus"></i> Follow
                                        </button>
                                    }
                                </form>
                            }
                        </div>

                        @if (hasRights)
                        {
                            <div>
                                <a asp-controller="Posts" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                                <form asp-controller="Posts" asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Ștergi postarea?');">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        }
                    </div>

                    <div class="card-body pt-0">
                        <p class="card-text fs-5 mt-2">@item.Content</p>
                        @if (!string.IsNullOrEmpty(item.MediaPath))
                        {
                            var isVideo = item.MediaPath.EndsWith(".mp4", StringComparison.OrdinalIgnoreCase)
                                       || item.MediaPath.EndsWith(".webm", StringComparison.OrdinalIgnoreCase)
                                       || item.MediaPath.EndsWith(".ogg", StringComparison.OrdinalIgnoreCase)
                                       || item.MediaPath.EndsWith(".mov", StringComparison.OrdinalIgnoreCase);
                            <div class="mt-3 text-center position-relative d-inline-block">
                                @if (isVideo)
                                {
                                    <video controls class="img-fluid rounded shadow-sm" style="max-height: 500px;">
                                        <source src="@item.MediaPath" type="video/mp4" />
                                        Browserul tău nu suportă redarea video.
                                    </video>
                                }
                                else
                                {
                                    <img src="@item.MediaPath" class="img-fluid rounded shadow-sm" style="max-height: 500px;" />
                                }
                                @if (hasRights)
                                {
                                    <form asp-controller="Posts" asp-action="DeleteMedia" asp-route-id="@item.Id" method="post" style="position: absolute; top: 10px; right: 10px;">
                                        <button type="submit" class="btn btn-danger btn-sm shadow" onclick="return confirm('Ștergi doar fișierul media?');">
                                            <i class="fa-solid fa-image"></i>
                                        </button>
                                    </form>
                                }
                            </div>
                        }
                    </div>

                    <div class="card-footer bg-transparent border-top-0">

                        <div class="d-flex align-items-center mb-3">
                            <form asp-controller="Posts" asp-action="ToggleLike" method="post" class="me-2" onsubmit="return preventDoubleLike(this);">
                                <input type="hidden" name="postId" value="@item.Id" />
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />

                                <button type="submit" class="btn btn-sm border-0 p-0" style="background: none;" title="@(isLiked ? "Nu mai aprecia" : "Apreciază")">
                                    @if (isLiked)
                                    {
                                        <i class="fa-solid fa-heart text-heart fa-2x"></i>
                                    }
                                    else
                                    {
                                        <i class="fa-regular fa-heart text-heart fa-2x"></i>
                                    }
                                </button>
                            </form>

                            <div style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#likesModal-@item.Id">
                                <span class="like-count-text ms-1">@item.Likes.Count</span>
                                <span class="like-label">aprecieri</span>
                            </div>
                        </div>

                        <h6 class="mb-3"><i class="fa-regular fa-comments"></i> Comentarii</h6>

                        @if (item.Comments != null && item.Comments.Any())
                        {
                            <ul class="list-unstyled mb-3">
                                @foreach (var comm in item.Comments.OrderByDescending(c => c.Date))
                                {
                                    bool isCommOwner = esteLogat && comm.User != null && User.Identity.Name == comm.User.UserName;
                                    <li class="mb-2 p-2 rounded d-flex justify-content-between align-items-start border" style="background-color: rgba(128,128,128, 0.1);">
                                        <div>
                                            <a asp-controller="Profiles" asp-action="Show" asp-route-id="@comm.UserId" class="text-decoration-none fw-bold">
                                                @(comm.User?.FirstName ?? "Anonim"):
                                            </a>
                                            <span>@comm.Content</span>
                                            <br />
                                            <small class="text-muted" style="font-size: 0.7rem;">@comm.Date.ToString("g")</small>
                                        </div>
                                        @if (isCommOwner || isAdmin)
                                        {
                                            <div class="ms-2 d-flex gap-1">
                                                <a asp-controller="Posts" asp-action="EditComment" asp-route-id="@comm.Id" class="text-warning small"><i class="fa-solid fa-pen"></i></a>
                                                <form asp-controller="Posts" asp-action="DeleteComment" asp-route-id="@comm.Id" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-link text-danger p-0 small" onclick="return confirm('Ștergi?');"><i class="fa-solid fa-trash"></i></button>
                                                </form>
                                            </div>
                                        }
                                    </li>
                                }
                            </ul>
                        }
                        @if (esteLogat)
                        {
                            <form asp-controller="Posts" asp-action="AddComment" method="post" class="d-flex gap-2">
                                <input type="hidden" name="postId" value="@item.Id" />
                                <input type="text" name="content" class="form-control form-control-sm" placeholder="Comentează..." />
                                <button type="submit" class="btn btn-sm btn-primary">Trimite</button>
                            </form>
                        }
                    </div>
                </div>
            }
        }
    </div>
</div>

<script>
    function preventDoubleLike(form) {
        var btn = form.querySelector('button');
        if (btn.style.pointerEvents === 'none') {
            return false;
        }
        btn.style.pointerEvents = 'none';
        btn.style.opacity = '0.5';
        return true;
    }
</script>

@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        <div class="modal fade" id="likesModal-@item.Id" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-sm">
                <div class="modal-content" style="background-color: var(--card-bg); color: var(--text-color); border: 1px solid var(--border-color);">
                    <div class="modal-header" style="border-bottom: 1px solid var(--border-color);">
                        <h6 class="modal-title fw-bold">Aprecieri</h6>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        @if (item.Likes != null && item.Likes.Any())
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var like in item.Likes)
                                {
                                    <li class="list-group-item d-flex align-items-center gap-2 border-0" style="background: transparent;">
                                        <a asp-controller="Profiles" asp-action="Show" asp-route-id="@like.UserId" class="d-flex align-items-center text-decoration-none gap-2" style="width: 100%;">
                                            @if (!string.IsNullOrEmpty(like.User.ProfilePicture))
                                            {
                                                <img src="@like.User.ProfilePicture" class="rounded-circle" style="width: 30px; height: 30px; object-fit: cover;" />
                                            }
                                            else
                                            {
                                                <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;">
                                                    <i class="fa-solid fa-user text-white" style="font-size: 0.8rem;"></i>
                                                </div>
                                            }
                                            <span style="color: var(--text-color); font-weight: bold;">@like.User.FirstName @like.User.LastName</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <div class="text-center py-2">
                                <small class="text-muted">Fii primul care apreciază!</small>
                            </div>
                        }
                    </div>
                    <div class="modal-footer p-1 border-top-0">
                        <button type="button" class="btn btn-sm btn-secondary w-100" data-bs-dismiss="modal">Închide</button>
                    </div>
                </div>
            </div>
        </div>
    }
}