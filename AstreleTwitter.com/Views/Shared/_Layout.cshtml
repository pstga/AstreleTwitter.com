@using Microsoft.AspNetCore.Identity
@using AstreleTwitter.com.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AstreleTwitter.com</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>🪐</text></svg>">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alpino:wght@400;500;600;700&family=Nunito:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> 
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <div class="planetary-system">
        <div class="planet planet-1"></div>
        <div class="planet planet-2"><div class="ring"></div></div>
        <div class="planet planet-3"></div>
        <div class="planet planet-4"></div>
    </div>

    <div class="app-wrapper">
        <aside class="left-sidebar">
            <div class="sidebar-content">
                <div class="sidebar-header">
                    <a class="sidebar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-rocket"></i>
                        <span class="brand-text">Astrele Twitter</span>
                    </a>
                </div>

                <nav class="sidebar-nav">
                    <a class="sidebar-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" 
                       asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-house"></i>
                        <span>Acasă</span>
                    </a>

                    <a class="sidebar-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Groups" ? "active" : "")" 
                       asp-controller="Groups" asp-action="Index">
                        <i class="fa-solid fa-users-rectangle"></i>
                        <span>Grupuri</span>
                    </a>

                    <a class="sidebar-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Astrology" ? "active" : "")" 
                       asp-controller="Astrology" asp-action="Index">
                        <i class="fa-solid fa-star"></i>
                        <span>Astrologie</span>
                    </a>

                    @if (User.IsInRole("Admin"))
                    {
                        <a class="sidebar-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" ? "active" : "")" 
                           asp-controller="Admin" asp-action="Users">
                            <i class="fa-solid fa-shield-halved"></i>
                            <span>Admin Panel</span>
                        </a>
                    }

                    @if (SignInManager.IsSignedIn(User))
                    {
                        var currentUser = await UserManager.GetUserAsync(User);
                        <a class="sidebar-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Profiles" && ViewContext.RouteData.Values["Action"]?.ToString() == "Show" ? "active" : "")" 
                           asp-controller="Profiles" asp-action="Show" asp-route-id="@currentUser?.Id">
                            <i class="fa-solid fa-user"></i>
                            <span>Profilul Meu</span>
                        </a>
                    }
                </nav>

                <div class="sidebar-footer">
                    <button id="themeToggle" class="sidebar-item" style="border: none; background: none; width: 100%; text-align: left;">
                        <span id="themeIcon">☀️</span>
                        <span>Schimbă Tema</span>
                    </button>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </aside>

        <div class="main-wrapper">
            <header class="top-search-bar">
                <div class="search-wrapper">
                    <form asp-controller="Profiles" asp-action="Index" method="get" class="search-form">
                        <div class="input-group">
                            <span class="input-group-text" style="background-color: var(--input-bg); border-color: var(--border-color); color: var(--text-color);">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </span>
                            <input type="text" name="searchString" class="form-control" 
                                   placeholder="Caută utilizatori..." 
                                   value="@Context.Request.Query["searchString"]"
                                   style="background-color: var(--input-bg); border-color: var(--border-color); color: var(--text-color);" />
                        </div>
                    </form>
                </div>
            </header>
            <main class="main-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        const toggleBtn = document.getElementById('themeToggle');
        const themeIcon = document.getElementById('themeIcon');
        const body = document.body;

        if (localStorage.getItem('theme') === 'light') {
            body.classList.add('light-theme');
            if (themeIcon) themeIcon.innerText = '🌙';
        }

        if (toggleBtn && themeIcon) {
            toggleBtn.addEventListener('click', () => {
                body.classList.toggle('light-theme');

                if (body.classList.contains('light-theme')) {
                    localStorage.setItem('theme', 'light');
                    themeIcon.innerText = '🌙';
                } else {
                    localStorage.setItem('theme', 'dark');
                    themeIcon.innerText = '☀️';
                }
            });
        }
        // pt mibile, nu cred ca o sa vada niciodata lumina zilei, nici in testare
        function toggleSidebar() {
            const sidebar = document.querySelector('.left-sidebar');
            if (sidebar) {
                sidebar.classList.toggle('mobile-open');
            }
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>