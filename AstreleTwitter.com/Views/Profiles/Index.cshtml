@model IEnumerable<AstreleTwitter.com.Models.ApplicationUser>

@{
    ViewData["Title"] = "Caută Exploratori";
    var searchString = Context.Request.Query["searchString"].ToString();
    var hasSearch = !string.IsNullOrEmpty(searchString);
}

<div class="container mt-4">
    @if (hasSearch)
    {
        <h2 class="mb-4">🔭 Rezultate pentru: "@searchString"</h2>
    }
    else
    {
        <h2 class="mb-4">🔭 Caută Exploratori</h2>
        <p class="text-muted mb-4">Folosește bara de căutare de sus pentru a găsi utilizatori.</p>
    }

    <div class="row">
        @foreach (var user in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        @if (!string.IsNullOrEmpty(user.ProfilePicture))
                        {
                            <img src="@user.ProfilePicture" class="rounded-circle mb-3" style="width: 100px; height: 100px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="rounded-circle bg-secondary mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                                <i class="fa-solid fa-user fa-3x text-white"></i>
                            </div>
                        }

                        <h5 class="card-title fw-bold">@user.FirstName @user.LastName</h5>
                        <p class="text-muted small text-truncate">@(user.Bio ?? "Explorator spațial")</p>

                        <a asp-action="Show" asp-route-id="@user.Id" class="btn btn-outline-info btn-sm">Vezi Profil</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>