@model AstreleTwitter.com.Models.Group
@{
    ViewData["Title"] = "Editare Grup";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 post-card">
                <div class="card-header bg-transparent text-center border-bottom-0 pt-4">
                    <h3 class="fw-bold">Editează Grup</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">Denumire Grup</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Descriere</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Schimbă Imaginea</label>
                            <input type="file" name="groupImage" class="form-control" accept="image/*" />
                        </div>

                        @if (!string.IsNullOrEmpty(Model.GroupImage))
                        {
                            <div class="alert alert-secondary d-flex align-items-center gap-3 p-2">
                                <img src="@Model.GroupImage" class="rounded" style="width: 50px; height: 50px; object-fit: cover;" />
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="deleteImage" value="true" id="delImg">
                                    <label class="form-check-label text-danger fw-bold" for="delImg">
                                        Șterge imaginea actuală
                                    </label>
                                </div>
                            </div>
                        }

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">Salvează Modificările</button>
                            <a asp-action="Show" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Anulează</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>