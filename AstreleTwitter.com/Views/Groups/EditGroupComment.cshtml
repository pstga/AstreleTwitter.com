@model AstreleTwitter.com.Models.GroupComment
@{
    ViewData["Title"] = "Editează Comentariu";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 post-card">
                <div class="card-header bg-transparent text-center border-bottom-0 pt-4">
                    <h3 class="fw-bold" style="color: var(--text-color);">Editează Comentariu</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="EditGroupComment" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label class="form-label fw-bold" style="color: var(--text-color);">Conținut</label>
                            <textarea asp-for="Content" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Content" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Show" asp-route-id="@Model.GroupMessage.GroupId" class="btn btn-outline-secondary px-4">Anulează</a>
                            <button type="submit" class="btn btn-primary px-4">Salvează</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>